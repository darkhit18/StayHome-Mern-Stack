<%- include('../partials/head') %>
    </head>

    <body class="bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 min-h-screen relative">

        <!-- Background Animated Blobs -->
        <div class="fixed inset-0 -z-10 overflow-hidden">
            <div
                class="absolute top-10 left-20 w-72 h-72 bg-pink-500 rounded-full filter blur-3xl opacity-30 animate-pulse">
            </div>
            <div
                class="absolute bottom-20 right-20 w-80 h-80 bg-purple-600 rounded-full filter blur-3xl opacity-30 animate-pulse">
            </div>
            <div
                class="absolute top-1/3 right-1/4 w-64 h-64 bg-blue-500 rounded-full filter blur-2xl opacity-25 animate-ping">
            </div>
        </div>

        <%- include('../partials/nav') %>

            <!-- Main Form Container -->
            <main class="relative z-10 flex justify-center items-start px-4 py-8 min-h-screen">
                <div class="w-full max-w-md">

                    <!-- Form Card -->
                    <div
                        class="backdrop-blur-xl bg-white/20 rounded-3xl shadow-2xl border border-white/20 p-8 hover:bg-white/15 transition-all duration-500">

                        <!-- Header -->
                        <div class="text-center mb-8">
                            <div
                                class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl mb-4 shadow-lg transform hover:scale-105 transition-transform duration-300">
                                <i data-lucide="user-plus" class="w-8 h-8 text-white"></i>
                            </div>
                            <h1 class="text-3xl font-bold text-white mb-2 tracking-tight">Create Account</h1>
                            <p class="text-white/70">Join our community today</p>
                        </div>

                        <!-- Form -->
                        <form action="/signup" method="POST" class="space-y-6">

                            <%- include('../partials/errors') %>
                                    <!-- Name Row -->
                                    <div class="grid grid-cols-2 gap-4">
                                        <!-- First Name -->
                                        <div class="relative">
                                            <i data-lucide="user"
                                                class="absolute left-3 top-3.5 text-gray-300 w-5 h-5"></i>
                                            <input type="text" id="firstname" name="firstname" value="<%= oldInput.firstname ? oldInput.firstname : '' %>" placeholder="First Name"
                                                required class="pl-10 w-full px-3 py-3 rounded-lg bg-white/20 border border-white/30 
                                                    text-white placeholder-gray-800 focus:placeholder-transparent 
                                                    focus:outline-none focus:ring-2 focus:ring-pink-500" />
                                        </div>

                                        <!-- Last Name -->
                                        <div class="relative">
                                            <i data-lucide="user"
                                                class="absolute left-3 top-3.5 text-gray-300 w-5 h-5"></i>
                                            <input type="text" id="lastname" name="lastname" value="<%= oldInput.lastname ? oldInput.lastname : '' %>" placeholder="Last Name"
                                                required class="pl-10 w-full px-3 py-3 rounded-lg bg-white/20 border border-white/30 
                                                    text-white placeholder-gray-800 focus:placeholder-transparent 
                                                    focus:outline-none focus:ring-2 focus:ring-pink-500" />
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="relative">
                                        <i data-lucide="mail" class="absolute left-3 top-3.5 text-gray-300 w-5 h-5"></i>
                                        <input type="email" id="email" name="email" value="<%= oldInput.email ? oldInput.email : '' %>" placeholder="Email" required class="pl-10 w-full px-3 py-3 rounded-lg bg-white/20 border border-white/30 
                                                text-white placeholder-gray-800 focus:placeholder-transparent 
                                                focus:outline-none focus:ring-2 focus:ring-pink-500" />
                                    </div>

                                    <!-- Password -->
                                    <div class="relative">
                                        <i data-lucide="lock" class="absolute left-3 top-3.5 text-gray-300 w-5 h-5"></i>
                                        <input type="password" id="password" name="password" placeholder="Password"
                                            required class="pl-10 w-full px-3 py-3 rounded-lg bg-white/20 border border-white/30 
                                                    text-white placeholder-gray-800 focus:placeholder-transparent 
                                                    focus:outline-none focus:ring-2 focus:ring-pink-500" />
                                    </div>

                                    <!-- Confirm Password -->
                                    <div class="relative">
                                        <i data-lucide="lock" class="absolute left-3 top-3.5 text-gray-300 w-5 h-5"></i>
                                        <input type="password" id="confirmpassword" name="confirmpassword"
                                            placeholder="Confirm Password" required class="pl-10 w-full px-3 py-3 rounded-lg bg-white/20 border border-white/30 
                                                text-white placeholder-gray-800 focus:placeholder-transparent 
                                                focus:outline-none focus:ring-2 focus:ring-pink-500" />
                                    </div>

                                    <!-- User Type -->
                                    <div class="space-y-3">
                                        <p class="text-white/90 font-medium text-sm">Account Type</p>
                                        <div class="grid grid-cols-2 gap-3">
                                            <label class="relative block cursor-pointer">
                                                <input type="radio" name="userType" value="guest" id="guest"
                                                    class="peer sr-only" checked="<% oldInput.userType === "guest" %>" />
                                                <div class="flex items-center justify-center p-4 bg-white/10 rounded-xl border-2 border-white/20 
                                                        transition-all duration-300 peer-checked:border-pink-500 peer-checked:bg-pink-500/20 
                                                        peer-checked:shadow-lg peer-checked:shadow-pink-500/20" >
                                                    <i data-lucide="user" class="w-5 h-5 mr-2"></i>
                                                    <span class="text-white text-sm font-medium">Guest</span>
                                                </div>
                                            </label>

                                            <label class="relative block cursor-pointer">
                                                <input type="radio" name="userType" value="host" id="host"
                                                    class="peer sr-only" checked="<% oldInput.userType === "host" %>" />
                                                <div class="flex items-center justify-center p-4 bg-white/10 rounded-xl border-2 border-white/20 
                                                    transition-all duration-300 peer-checked:border-pink-500 peer-checked:bg-pink-500/20 
                                                    peer-checked:shadow-lg peer-checked:shadow-pink-500/20" >
                                                        <i data-lucide="home" class="w-5 h-5 mr-2"></i>
                                                    <span class="text-white text-sm font-medium">Host</span>
                                                </div>
                                            </label>
                                        </div>
                                    </div>

                                    <!-- Terms -->
                                    <label for="terms" class="flex items-center gap-3 cursor-pointer select-none">
                                        <input type="checkbox" name="terms" id="terms"
                                            class="w-5 h-5 accent-pink-600 cursor-pointer" required />
                                        <span class="text-white/70 text-sm">I agree to the Terms of Service and Privacy
                                            Policy</span>
                                    </label>

                                    <!-- Submit Button -->
                                    <button type="submit" class="w-full flex items-center justify-center gap-3 bg-gradient-to-r from-pink-500 to-purple-600 
                                                text-white font-semibold py-4 rounded-xl hover:from-purple-600 hover:to-pink-500 
                                                active:scale-[0.98] transition-all duration-300 shadow-lg hover:shadow-pink-500/25 group">
                                        <i data-lucide="user-plus"
                                            class="w-5 h-5 group-hover:rotate-12 transition-transform"></i>
                                        Create Account
                                    </button>

                                    <!-- Login Link -->
                                    <div class="text-center pt-4 border-t border-white/10">
                                        <span class="text-white/60 text-sm">Already have an account? </span>
                                        <a href="/login"
                                            class="text-pink-400 hover:text-pink-300 font-medium text-sm">Sign
                                            in</a>
                                    </div>
                        </form>
                    </div>
                </div>
            </main>

            <!-- Lucide Icons -->
            <script src="https://unpkg.com/lucide@0.451.0"></script>
            <script> lucide.createIcons(); </script>
    </body>

    </html>