<%- include('../partials/head')%>
</head>
<body class="bg-gray-200">
    <%- include('../partials/nav')%>

    <main class="container mx-auto mt-10 p-8 max-w-2xl">
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <h1 class="text-3xl font-bold mb-8 text-center text-gray-800 border-b pb-4">
                <%= editing ? "Edit" : "Register" %> Your Home
            </h1>

            <form action="/host/<%= editing ? 'edit-home' : 'add-home'%>" 
                  method="POST" 
                  enctype="multipart/form-data"
                  class="space-y-5">
                
                <input type="hidden" name="id" value="<%= editing ? home._id : '' %>" />

                <!-- Home Name -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Home Name</label>
                    <input type="text" name="homeName" 
                           value="<%= editing ? home.homeName : ''%>"
                           placeholder="Enter your house name"
                           required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                </div>

                <!-- Price -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Price</label>
                    <input type="number" name="Price" 
                           value="<%= editing ? home.Price : ''%>"
                           placeholder="Enter price"
                           required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                </div>

                <!-- Rating -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Rating</label>
                    <input type="text" name="Rating" 
                           value="<%= editing ? home.Rating : ''%>"
                           placeholder="Enter rating (e.g. 4.5)"
                           required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                </div>

                <!-- Location -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Location</label>
                    <input type="text" name="location" 
                           value="<%= editing ? home.location : ''%>"
                           placeholder="Enter location"
                           required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                </div>

                <!-- Photo -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Upload Photo</label>
                    <input type="file" name="photo" accept="image/jpg, image/jpeg, image/png"
                           class="w-full text-gray-600 border border-gray-300 rounded-lg file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-600 hover:file:bg-blue-100 cursor-pointer">
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Description</label>
                    <textarea name="description" rows="4"
                              placeholder="Describe your home"
                              required
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"><%= editing ? home.description : '' %></textarea>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" 
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg shadow-md transition duration-200 ease-in-out transform hover:scale-[1.02]">
                        <%= editing ? "Update Home" : "Add Home" %>
                    </button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
