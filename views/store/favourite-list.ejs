<%- include('../partials/head')%>
</head>

<body class="bg-gray-200 min-h-screen">
  <%- include('../partials/nav')%>

  <main class="container mx-auto bg-white shadow-2xl rounded-3xl p-10 mt-12 max-w-6xl">
    <!-- Page Heading -->
    <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 text-center mb-4">
      Your Favourite Homes
    </h2>
    <div class="w-28 h-1 bg-gradient-to-r from-indigo-500 to-purple-500 mx-auto mb-10 rounded-full"></div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% if (favouriteHomes && favouriteHomes.length > 0) { %>
        <% favouriteHomes.forEach(home => { %>
          <div
            class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-2xl hover:scale-[1.03] transition-all duration-300">
            
            <!-- Image -->
            <img class="h-56 w-full object-cover" src="<%= home.photo %>" alt="<%= home.homeName %>">

            <!-- Card Body -->
            <div class="p-6">
              <!-- Title + Rating -->
              <div class="flex justify-between items-center">
                <h3 class="text-xl font-bold text-gray-900 truncate">
                  <%= home.homeName %>
                </h3>
                <div class="flex items-center">
                  <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 
                      0l1.07 3.292a1 1 0 00.95.69h3.462c.969 
                      0 1.371 1.24.588 1.81l-2.8 
                      2.034a1 1 0 00-.364 1.118l1.07 
                      3.292c.3.921-.755 
                      1.688-1.54 1.118l-2.8-2.034a1 
                      1 0 00-1.175 
                      0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 
                      1 0 00-.364-1.118L2.98 
                      8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 
                      1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="ml-1 text-gray-600 text-sm"><%= home.Rating %>/5</span>
                </div>
              </div>

              <!-- Location -->
              <p class="mt-3 text-gray-600 text-sm flex items-center">
                <i class="fas fa-map-marker-alt text-red-500 mr-2"></i>
                <%= home.location %>
              </p>

              <!-- Price -->
              <div class="mt-4">
                <span class="text-2xl font-extrabold text-indigo-600">â‚¹<%= home.Price %></span>
                <span class="text-gray-500">/night</span>
              </div>

              <!-- Remove Button -->
              <form action="/favourite/delete/<%= home._id %>" method="post" class="mt-6">
                <button type="submit"
                  class="w-full bg-gradient-to-r from-red-500 to-pink-500 px-5 py-2.5 rounded-xl text-white font-semibold 
                         shadow-md hover:from-red-600 hover:to-pink-600 hover:scale-105 transition-all duration-300">
                  Remove from Favourites
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-gray-500 col-span-full italic">No favourites added yet.</p>
      <% } %>
    </div>
  </main>
</body>
</html>
