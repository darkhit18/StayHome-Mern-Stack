<%- include('../partials/head')%>
</head>

<body class="bg-gray-200">
  <%- include('../partials/nav')%>

  <main class="container mx-auto bg-white shadow-xl rounded-2xl p-8 mt-10 max-w-6xl">
    <!-- Page Title -->
    <h2 class="text-3xl md:text-4xl text-gray-800 font-bold text-center mb-10">
      Here are our Registered Homes
    </h2>

    <!-- Homes Grid -->
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 list-none p-0 m-0">
      <% registeredHomes.forEach(home => { %>
        <li
          class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-transform hover:-translate-y-1 duration-300">

          <!-- Image -->
          <img
            class="h-52 w-full object-cover"
            src="<%= home.photo %>"
            alt="<%= home.homeName %>">

          <!-- Card Body -->
          <div class="p-5 flex flex-col">
            
            <!-- Title + Rating -->
            <div class="flex justify-between items-center">
              <h3 class="text-lg font-semibold text-gray-800 truncate">
                <%= home.homeName %>
              </h3>
              <div class="flex items-center">
                <svg
                  class="h-5 w-5 text-yellow-400"
                  fill="currentColor"
                  viewBox="0 0 20 20">
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 
                       1.902 0l1.07 3.292a1 1 0 
                       00.95.69h3.462c.969 0 
                       1.371 1.24.588 1.81l-2.8 
                       2.034a1 1 0 00-.364 1.118l1.07 
                       3.292c.3.921-.755 1.688-1.54 
                       1.118l-2.8-2.034a1 1 0 
                       00-1.175 0l-2.8 2.034c-.784.57-1.838
                       -.197-1.539-1.118l1.07-3.292a1 
                       1 0 00-.364-1.118L2.98 
                       8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 
                       1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="ml-1 text-gray-600 text-sm">
                  <%= home.Rating %>/5
                </span>
              </div>
            </div>

            <!-- Location -->
            <p class="mt-2 text-gray-600 text-sm flex items-center">
              <i class="fas fa-map-marker-alt text-red-500 mr-2"></i>
              <%= home.location %>
            </p>

            <!-- Price -->
            <div class="mt-4">
              <span class="text-2xl font-bold text-indigo-600">
                â‚¹<%= home.Price %>
              </span>
              <span class="text-gray-500">/night</span>
            </div>

            <!-- Actions -->
            <div class="mt-5 grid grid-cols-2 gap-3">
              <a
                href="/homes/<%= home._id %>"
                class="bg-teal-500 hover:bg-teal-600 text-white py-2 rounded-xl text-center font-semibold shadow-md transition transform hover:scale-105">
                Details
              </a>

              <!-- PASS the home object into the partial -->
              <%- include('../partials/favourite', { home: home }) %>
            </div>

          </div>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>

